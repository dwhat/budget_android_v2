<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="de.budget.BudgetAndroid.Categories.CategoriesMain">

    <!-- FAB -->
    <ImageButton
        android:src="@drawable/button"
        android:id="@+id/fab_category"
        android:onClick="newCategory"
        style="@style/FAB" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Menu -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/ic_category_w"
                android:layout_gravity="center_horizontal"
                style="@style/Headline"
                android:layout_width="wrap_content" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_categories"
                android:id="@+id/title_categories"
                android:layout_gravity="center_horizontal"
                style="@style/Headline"
                android:layout_width="match_parent" />
        </LinearLayout>

        <!-- Items -->
        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView_category"
            android:layout_gravity="center"
            android:choiceMode="singleChoice" />

    </LinearLayout>
</FrameLayout>
