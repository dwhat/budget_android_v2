<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <TextView
        android:id="@+id/loss_total"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:paddingLeft="16dip"
        android:paddingBottom="16dip"
        android:text="5 â‚¬"
        android:contentDescription="TODO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical"
        android:textColor="@color/ColorPrimaryDark" />


    <TextView
        android:id="@+id/loss_notice"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/loss_total"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Notiz"
        android:textSize="12sp"
        android:paddingLeft="16dp"
        />

    <TextView
        android:id="@+id/loss_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/loss_notice"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/loss_total"
        android:gravity="center_vertical"
        android:layout_marginRight="6dip"
        android:text="Name des losss"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:textColor="@color/ColorPrimaryDark" />

    <TextView
        android:id="@+id/loss_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loss_notice"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/loss_name"
        android:text="Datum"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:textColor="@color/ColorPrimaryDark"
        android:layout_alignParentEnd="false"
        android:gravity="right" />

</RelativeLayout>